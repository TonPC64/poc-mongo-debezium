{
  "name": "mongodb-connector",
  "config": {
    "connector.class": "io.debezium.connector.mongodb.MongoDbConnector",
    "tasks.max": "1",
    "mongodb.hosts": "mongodb:27017",
    "mongodb.name": "mongodb",
    "mongodb.user": "root",
    "mongodb.password": "root",
    "mongodb.authsource": "admin",
    "database.whitelist": "testdb",
    "collection.whitelist": "testdb.users",
    "database.history.kafka.bootstrap.servers": "kafka:29092",
    "database.history.kafka.topic": "dbhistory.mongodb",
    "key.converter": "org.apache.kafka.connect.json.JsonConverter",
    "key.converter.schemas.enable": "false",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false",
    "capture.mode": "change_streams_update_full_with_pre_image",
    "transforms": "route,extractKeyId",
    "transforms.route.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.route.regex": ".*",
    "transforms.route.replacement": "db-user-capture",
    "transforms.extractKeyId.type": "org.apache.kafka.connect.transforms.ExtractField$Key",
    "transforms.extractKeyId.field": "id"
  }
}